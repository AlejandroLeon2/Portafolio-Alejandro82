<section
  id="bento"
  class="flex flex-col items-center h-auto justify-center bg-gradient-to-t from-dorado to-neonCyan"
>
  <h3
    class="text-[3rem] font-serif text-black pt-10 relative top-0 font-semibold"
  >
    Proyectos
  </h3>
  <span class="block w-40 h-1 bg-indigo-500 mx-auto mt-3 mb-8 rounded-full"
  ></span>
  <div
    class="md:max-w-254 w-full flex items-center justify-center md:p-2 [@media(max-width:426px)]:flex-col flex-wrap gap-6 md:gap-4 p-5"
  >
    {projects.map((project) => <Bento {...project} />)}
  </div>
</section>

<section
  id="tecnologias"
  class="py-8 md:py-12 bg-gradient-to-b from-dorado to-mutedBlue"
>
  <TecSection techStack={techStack} />
</section>

<section
  id="experiencia"
  class="flex flex-col justify-center items-center pb-50 bg-gradient-to-b from-mutedBlue via-neonGreen to-neonGreen"
>
  <h4 class="text-black text-[3rem] mt-20 font-serif font-semibold">
    Estudios
  </h4>
  <span class="block w-40 h-1 bg-indigo-500 mx-auto mt-3 mb-8 rounded-full"
  ></span>
  <LineaT />
</section>
<section
  class="flex justify-center items-center bg-gradient-to-t from-darkBlue to-neonGreen h-screen"
>
  <Formulario />
</section>
