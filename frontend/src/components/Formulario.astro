<form class="max-w-md mx-auto flex flex-col bg-gray-900 p-6 rounded-lg shadow-lg">
  <h2 class="text-white text-2xl font-bold mb-4">Contactame</h2>

  <label class="block text-gray-400 mb-2" for="name">Nombre:</label>
  <input
    id="name"
    type="text"
    placeholder="Ingresa tu nombre"
    class="w-full p-2 bg-gray-800 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-neonBlue"
  />

  <label class="block text-gray-400 mt-4 mb-2" for="email"
    >Correo electr√≥nico:</label
  >
  <input
    id="email"
    type="email"
    placeholder="Ingresa tu correo electronico"
    class="w-full p-2 bg-gray-800 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-neonBlue"
  />

  <label class="block text-gray-400 mt-4 mb-2" for="message">Mensaje:</label>
  <textarea
    id="message"
    rows="4"
    placeholder="Escribe tu mensaje..."
    class="w-full p-2 bg-gray-800 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-neonBlue"
  ></textarea>

  <button
    type="submit"
    class="mt-4 mx-auto bg-neonBlue text-gray-900 p-2 rounded-md font-bold hover:bg-[#84d6e9] transition"
  >
    Enviar Mensaje
  </button>
</form>
