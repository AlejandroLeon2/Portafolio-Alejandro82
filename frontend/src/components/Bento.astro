---
import Boton from "./Boton.astro";
import TecItem from "./TecItem.astro";
const { title, description, image, link, clas, estado, items, color } =
  Astro.props;
---

<div
  class={`group  cardBento h-[280px] ${clas} drop-shadow-xl overflow-hidden [@media(max-width:426px)]:w-full hover:drop-shadow-black shadow-lg shadow-black/50 rounded-lg block bg-gray-600 text-white transition hover:scale-105`}
>
  <img
    src={image}
    alt={title}
    class="w-full h-4/7 overflow-hidden object-cover md:opacity-50 md:group-hover:opacity-100 transition"
  />
  <div class="py-2 px-3.5">
    <h3 class="text-[1.125rem] font-bold truncate">{title}</h3>
    <p class="text-gray-300 text-[0.725rem] mt-1 truncate">{description}</p>
    <div class="flex gap-1 h-6">
      <Boton link=`${link}` text="ver" />
      <!-- 
        {
          items.map((item) => (
            <TecItem {...item} ocultar="hidden" utiles="mt-3" />
          ))
        }
          -->
    </div>
  </div>
  <span
    class={`absolute top-6 -left-7 w-auto -rotate-45 font-mono font-semibold ${color} rounded-lg px-5`}
    >{estado}</span
  >
</div>

<script>
  const elemento = document.querySelectorAll(".cardBento");

  elemento.forEach((element) => {
    element.addEventListener("mouseenter", () => {
      element.classList.toggle("scale-20");
    });
  });
  elemento.forEach((element) => {
    element.addEventListener("mouseleave", () => {
      element.classList.toggle("scale-20");
    });
  });
</script>
