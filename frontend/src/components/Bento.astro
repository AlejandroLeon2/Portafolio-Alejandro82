---
import ModalBento from "./ModalBento.astro";
import Boton from "./Boton.astro";
const { title, description, image, links, clas, items } = Astro.props;
---

<div
  class={`group  cardBento  h-[280px] ${clas} drop-shadow-xl overflow-hidden [@media(max-width:426px)]:w-full hover:drop-shadow-black shadow-lg shadow-black/50 rounded-lg  bg-gray-600 text-white transition hover:scale-105`}
>
  <img
    src={image.portada.link}
    alt={image.portada.link}
    class="w-full h-4/7 overflow-hidden object-cover md:opacity-50 md:group-hover:opacity-100 transition"
  />
  <div class="py-2 px-3.5">
    <h3 class="text-xl kaus truncate">{title}</h3>
    <p class="text-gray-300 text-sm poppins truncate">{description}</p>
    <div class="flex justify-start mt-2 text-center items-start">
      <Boton text="Ver mas" tamaÃ±o="text-sm" seleccionar="agrandar" />
    </div>
  </div>
  <span
    class={`absolute top-4 -left-7  w-auto -rotate-45  shadow-lg shadow-black/40 kaus text-xs font-semibold ${links.estado.habilitado ? "bg-turquesa" : "bg-rojo"}  py-1 px-5`}
    >{links.estado.habilitado ? "Completed" : "Incomplete"}</span
  >
</div>

<ModalBento
  title={title}
  description={description}
  image={image}
  links={links}
  items={items}
/>


