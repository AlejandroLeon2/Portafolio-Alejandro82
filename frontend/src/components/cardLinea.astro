---
const { titulo, subtitulo, descripcion, fecha, clas, class2 } = Astro.props;
---

<div
  class=` [@media(max-width:320px)]:w-[310px] w-full md:w-184 lg:w-210  flex ${class2}`
>
  <div
    class=`w-[43%] flex flex-col items-center mx-1 md:mx-0.5 bg-black/30 p-2 md:py-4 md:px-2   rounded-2xl   ${clas}`
  >
    <h2 class="text-black kaus text-lg md:text-2xl">
      {titulo}
    </h2>
    <h3 class="text-indigo-900 w-full px-1 kaus mb-1 text-sm md:text-lg">
      {subtitulo}
    </h3>
    <p class="text-white/80 w-full px-1 font-medium text-xs md:text-sm">
      {descripcion}
    </p>
    <time
      datetime="2024-08"
      class="text-black font-semibold w-full px-1 font-mono text-sm"
      >{fecha}</time
    >
  </div>
</div>
