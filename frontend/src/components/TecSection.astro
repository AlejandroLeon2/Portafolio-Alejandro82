---

import Categorias from "./Categorias.astro";
const { techStack } = Astro.props;
---

<div class="container mx-auto px-4">
  <h2 class="text-2xl md:text-[3rem] font-serif font-semibold text-center text-gray-800 mb-8">
    Tech Stack
    <span class="block w-40 h-1 bg-indigo-500 mx-auto mt-3 rounded-full"></span>
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-5">
    {techStack.map((category) => <Categorias {...category} />)}
  </div>
</div>
