---
import CardLinea from "./cardLinea.astro";
import {estudios} from "../utils/estudios";
---

<section
  
  class="w-full flex flex-col items-center mx-auto  relative"
>
  <div
    class="absolute w-1 h-full bg-gradient-to-t from-neonBlue via-neonCyan to-mutedBlue"
  >

  </div>
  <div class="sticky top-50 bg-turquesa rounded-full text-white  ">

    <i class="fas fa-graduation-cap text-white text-2xl md:text-3xl py-2 md:py-[10.1px] px-1.5 md:px-2"></i>

</div>

  {
    estudios.map((time) => (
      <CardLinea
        titulo={time.titulo}
        subtitulo={time.subtitulo}
        descripcion={time.descripcion}
        fecha={time.fecha}
        clas={time.alignClass}
        class2={time.layoutClass}
      />
      <div class="sticky top-50  bg-turquesa rounded-full text-white   ">
                    <i class="fas fa-graduation-cap text-white text-2xl md:text-3xl py-2 md:py-[10.1px] px-1.5 md:px-2"></i>
      </div>
    ))
  }
</section>
